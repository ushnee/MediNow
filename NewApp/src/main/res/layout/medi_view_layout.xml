<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgMedi"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/txtMediName"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicine Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_below="@+id/imgMedi"
            android:textStyle="bold"
            android:textColor="@color/colorGreenDark"
            />

        <TextView
            android:id="@+id/txtMediDesc"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicine Description"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_below="@+id/txtMediName"
            android:textColor="@color/cardview_dark_background"
            />

        <TextView
            android:id="@+id/txtMediPrice"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicine Price"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_below="@+id/txtMediDesc"
            android:textStyle="bold"
            android:textColor="@color/colorGreenDark"
            />



    </RelativeLayout>

</android.support.v7.widget.CardView>